<table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">{{ 'label.username'|trans }}</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.email'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
    {% for invoice in invoices %}
            <tr class="table-primary">
                <td>{{ invoice.number }}</td>
                <td>{{ invoice.dateOfIssueString }}</td>
                <td>{{ invoice.Recepient.Name }}</td>
                <td>{{ invoice.ReferenceNumber }}</td>
                <td>{{ invoice.TotalPrice }}</td>
                <td>{{ invoice.State.Name }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_user_show', {'id': invoice.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_user_edit', {'id': invoice.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr class="table-warning">
                <td colspan="4" align="center">{{ 'invoice.no_invoices_found'|trans }}</td>
           </tr>
        {% endfor %}    
    </tbody>
    </table>