<div class='row'> 
    <div class="col-sm-3">
        <div class="form-group">            
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i> {{ button_label|default(('label.save_invoice')|trans) }}
            </button>
        </div>
    </div>
    {% if include_back_to_home_link|default(false) %}
        <div class="col-sm-3">
            <div class="form-group">
                <a href="{{ path('invoice_index') }}" class="btn btn-primary">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
                </a>
            </div>
        </div>
    {% endif %}
</div>