{% extends 'dashboard/layout.html.twig' %}

{% block body_id 'partner_edit' %}

{% block main %}
    <h1>{{ 'title.partner_edit'|trans({'%partner%': partner.name}) }}</h1>

    {{ include('dashboard/partner/_form.html.twig', {
        form: form,        
        addressForm: addressForm,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,        
    }, with_context = false) }}
    <button type='button' id='addAddressBtn' class='btn btn-sm btn-success'><i class="fa fa-plus" aria-hidden="true"></i></button>
        
        {{ include('dashboard/organization/addAddressModal.html.twig', {    
        form: addressForm
       }) }}
    
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('partner_show', {id: partner.id}) }}" class="btn btn-sm btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_partner'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('dashboard/partner/_delete_form.html.twig', {partner: partner}, with_context = false) }}
    </div>

    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/organization/new') }}
{% endblock %} 
