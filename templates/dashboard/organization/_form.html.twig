{% if show_confirmation|default(true) %}
    {% set attr = {'data-confirmation': 'true'} %}
    {{ include ('dashboard/organization/_delete_organization_confirmation.html.twig', {entity: entity}) }}
{% endif %}

{{ form_start(form) }}
    <div class="jumbotron">         
            <div class='row'>
                <div class="col-sm-7">
                    <div class="form-group"> 
                        {{ form_label(form.name, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
                        <div class='input-group'>
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div> 
                <div class="col-sm-5">
                    <div class="form-group"> 
                        {{ form_label(form.shortName, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
                        <div class='input-group'>
                            {{ form_widget(form.shortName, {'attr': {'class': 'form-control'}}) }} 
                        </div>
                    </div>
                </div>
            </div>
            <div class='row'>
                <div class="col-sm-9">
                    <div class="form-group"> 
                        {{ form_label(form.taxNumber, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
                        <div class='input-group'>
                            {{ form_widget(form.taxNumber, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group"> 
                        {{ form_label(form.taxable, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
                        <div class='input-group'>
                            {{ form_widget(form.taxable, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class='row'> 
                <div class="col-sm-4">
                    <div class="form-group">           
                        {{ form_label(form.address.line1, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
                        <div class='input-group'>
                            {{ form_widget(form.address.line1, {'attr': {'class': 'form-control'}}) }} 
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">           
                        {{ form_label(form.address.line2, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
                        <div class='input-group'>
                            {{ form_widget(form.address.line2, {'attr': {'class': 'form-control'}}) }} 
                        </div>
                    </div>
                </div> 
                <div class="col-sm-4">
                    <div class="form-group">           
                        {{ form_label(form.address.post, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
                        <div class='input-group'>
                            {{ form_widget(form.address.post, {'attr': {'class': 'form-control'}}) }} 
                        </div>
                    </div>
                </div>
            </div>
            
            
            
            <div class='row'> 
                <div class="col-sm-3">
                    <div class="form-group">            
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save" aria-hidden="true"></i> {{ ('label.save_' ~ entity)|trans }}
                        </button>
                    </div>
                </div>
                {% if include_back_to_home_link|default(false) %}
                    <div class="col-sm-3">
                        <div class="form-group">
                            <a href="{{ path(entity~'_index') }}" class="btn btn-primary">
                                <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>        
    </div>        
{{ form_end(form) }}
