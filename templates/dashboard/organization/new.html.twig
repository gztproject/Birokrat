{% extends 'dashboard/layout.html.twig' %}

{% block body_id 'organization_new' %}

{% block main %}
    <h1>{{ 'title.organization_new'|trans }}</h1>
              
    {{ form_start(form) }}
    
        {{ form_row(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }} 
        {{ form_row(form.shortName) }}
        {{ form_widget(form.shortName, {'attr': {'class': 'form-control'}}) }} 
        {{ form_row(form.taxNumber) }}
        {{ form_widget(form.taxNumber, {'attr': {'class': 'form-control'}}) }} 
        {{ form_row(form.taxable) }}
        {{ form_widget(form.taxable, {'attr': {'class': 'form-control'}}) }}
        
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_organization'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('organization_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/organization') }}
{% endblock %}    