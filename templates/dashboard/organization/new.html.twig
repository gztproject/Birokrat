{% extends 'dashboard/layout.html.twig' %}

{% block body_id 'organization_new' %}

{% block main %}
    <h1>{{ 'title.organization_new'|trans }}</h1>
              
    {{ form_start(form) }}
        <div class='row'>
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }} 
        </div>
        <div class='row'>
            {{ form_label(form.shortName) }}
            {{ form_widget(form.shortName, {'attr': {'class': 'form-control'}}) }} 
        </div>
        <div class='row'>
            {{ form_label(form.taxNumber) }}
            {{ form_widget(form.taxNumber, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class='row'> 
            {{ form_label(form.taxable) }}
            {{ form_widget(form.taxable, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class='row'>           
            {{ form_label(form.address) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}  
        
            <button type='button' id='addAddressBtn' class='btn btn-sm btn-success'> <!-- data-toggle="modal" data-target="#addAddressModal" -->
                <i class="fa fa-plus" aria-hidden="true"></i>
            </button>
        </div>
        
        <div class='row'>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_organization'|trans }}
            </button>
            {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
            <a href="{{ path('organization_index') }}" class="btn btn-link">
                <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
            </a>
        </div>
    {{ form_end(form) }}
    
{{ include('dashboard/organization/addAddressModal.html.twig', {    
        form: addressForm
        }) }}
    
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/organization/new') }}
{% endblock %}    