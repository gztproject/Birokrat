{% extends 'dashboard/layout.html.twig' %}

{% block body_id 'organization_edit' %}

{% block main %}
    <h1>{{ 'title.'~entity~'_edit'|trans({'%organization%': organization.name}) }}</h1>

    {{ include('dashboard/organization/_form.html.twig', {
        form: form,
        entity: entity,
        addressForm: addressForm,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,        
    }, with_context = false) }}
    <button type='button' id='addAddressBtn' class='btn btn-sm btn-success'><i class="fa fa-plus" aria-hidden="true"></i></button>
        
        {{ include('dashboard/organization/addAddressModal.html.twig', {    
        form: addressForm
       }) }}
    
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('organization_show', {id: organization.id}) }}" class="btn btn-sm btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_organization'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('dashboard/organization/_delete_form.html.twig', {organization: organization, entity: entity}, with_context = false) }}
    </div>

    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/organization/new') }}
{% endblock %} 
