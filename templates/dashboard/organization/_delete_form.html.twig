{{ include('dashboard/organization/_delete_organization_confirmation.html.twig') }}
<form action="{{ url(entity ~ '_delete', {id: organization.id}) }}" method="post" data-confirmation="true" id="delete-form">
    <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
    <button type="submit" class="btn btn-sm btn-block btn-danger">
        <i class="fa fa-trash" aria-hidden="true"></i>
        {{ 'action.delete_' ~ entity|trans }}
    </button>
</form>
