<div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">{{ "label.filter" | trans }}</div>
                <div class="card-body">
                

<form class="bs-component">
            
    <fieldset class="form-group">  
       <div class="input-group date" id="filterDateFrom">  
            <!--  <label class="col-form-label" for="dateFieldFrom">{{ 'label.dateFrom'|trans }}</label>-->
            <input type="text" id="dateFieldFrom" class="form-control">
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar" aria-hidden="true"></i></span>
            </div>
        </div>
      
        <div class="input-group date" id="filterDateTo">      
            <!--<label class="col-form-label" for="dateFieldTo">{{ 'label.dateTo'|trans }}</label>-->
            <input type="text" id="dateFieldTo" class="form-control">
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar" aria-hidden="true"></i></span>
            </div>
        </div>
    </fieldset>
    
    <fieldset class="form-group">
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="showBooked" value="">
            {{ 'label.booked' | trans }}
          </label>
        </div>
        <div class="form-check disabled">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" id="showUnbooked" value="">
            {{ 'label.unbooked' | trans }}
          </label>
        </div>
    </fieldset>
    
    <fieldset class="form-group">
        <button type="button" id="clearFilterBtn" class="btn btn-danger">{{ 'label.clear' | trans }}</button>  
    </fieldset>
</form>
</div>
</div>