{% extends 'dashboard/layout.html.twig' %}

{% block body_id 'konto_index' %}

{% block main %}
    <h1>{{ 'title.konto'|trans }}</h1>
    <div class="bs-component">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">{{ 'label.username'|trans }}</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.email'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
    {% for konto in kontos %}
            <tr class="table-primary">
                <td>{{ konto.number }}</td>
                <td>{{ konto.name }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_user_show', {'id': konto.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_user_edit', {'id': konto.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr class="table-warning">
                <td colspan="4" align="center">{{ 'konto.no_kontos_found'|trans }}</td>
           </tr>
        {% endfor %}    
    </tbody>
    </table>
    </div>
{% endblock %}

{% block sidebar %}
    
    {{ parent() }}

{% endblock %}
