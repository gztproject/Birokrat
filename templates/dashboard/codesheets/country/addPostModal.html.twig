<!-- Modal -->
<div id="addPostModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">{{ 'label.addPost'|trans }}</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        
      </div>
      <div class="modal-body">
        <form>
            {{ form_start(form) }}
            {{ form_end(form) }}
        </form>        
      </div>
      <div class="modal-footer">
        <div class='row'>
            <button id='submitPostBtn' type="submit" class="btn btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.addPost'|trans }}
            </button>            
        
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>

  </div>
</div>
<!-- end Modal -->