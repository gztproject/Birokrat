<table class="table table-hover" id="post_table">
    <thead>
        <tr>
            <th scope="col">{{ 'label.postName'|trans }}</th>
            <th scope="col">{{ 'label.postCode'|trans }}</th>
            <th scope="col">{{ 'label.postCodeInternational'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for post in posts %}
        <tr class="table-primary">            
            <td>{{ post.name }}</td>
            <td>{{ post.code }}</td>
            <td>{{ post.codeInternational }}</td>
            <td class="text-right">
                <div class="item-actions">
                    <a href="#{#{{ path('admin_user_edit', {'id': post.id}) }}#}" class="btn btn-sm btn-primary">
                        <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                    </a>
                </div>
            </td>
        </tr>
    {% else %}
        <tr class="table-warning">
            <td colspan="4" align="center">{{ 'label.no_posts_found'|trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table> 